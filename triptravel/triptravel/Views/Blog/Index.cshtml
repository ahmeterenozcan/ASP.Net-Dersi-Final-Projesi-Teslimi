@model triptravel.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="container">
            <div class="clearfix"></div>
        </div>
    </div>
    <!-- /Header -->

    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var x in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />
                        <a href="/Blog/BlogDetay/@x.ID" style="display: inline-block; margin-top:15px">@x.Baslik</a>
                        <p style="white-space: pre-line;">
                            @Html.Raw(HttpUtility.HtmlDecode(x.Aciklama))
                        </p>
                    </div>
                }
            </div>

            <div class="col-md-4 side-content">
                <!-- Recent Posts -->
                <div class="recent">
                    <h3>SON GÖNDERİLER</h3>
                    @foreach (var y in Model.Deger3)
                    {
                        <ul style="list-style-type: none; padding: 0;">
                            <li style="margin-bottom: 15px; display: flex; align-items: center;">
                                <img src="@y.BlogImage" alt="@y.Baslik" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px; border-radius: 5px;" />
                                <a href="/Blog/BlogDetay/@y.ID" style="text-decoration: none; color: #333; font-weight: bold;">@y.Baslik</a>
                            </li>
                        </ul>
                    }
                </div>
                <div class="all-blogs" style="
    margin-top: 30px;
    position: sticky;
    top: 20px;
    height: 300px;
    overflow-y: scroll;
    border: 1px solid #ccc;
    padding: 10px;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
">
                    <style>
                        /* Scrollbar'ı gizle */
                        .all-blogs::-webkit-scrollbar {
                            display: none;
                        }

                        /* Scrollbar desteklenmeyen tarayıcılar için */
                        .all-blogs {
                            -ms-overflow-style: none; /* Internet Explorer */
                            scrollbar-width: none; /* Firefox */
                        }
                    </style>
                    <h3>TÜM GÖNDERİLER</h3>
                    <ul style="list-style-type: none; padding: 0; margin: 0;">
                        @foreach (var blog in Model.Deger1)
                        {
                            <li style="margin-bottom: 10px; padding: 5px; border-bottom: 1px solid #e0e0e0;">
                                <a href="/Blog/BlogDetay/@blog.ID"
                                   style="text-decoration: none;
                          color: #333;
                          font-weight: bold;
                          display: block;">
                                    @blog.Baslik
                                    <span style="float: right; color: #777; font-size: 12px;">
                                        @blog.Tarih.ToString("dd.MM.yyyy")
                                    </span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>
